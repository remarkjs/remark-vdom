{
  "name": "remark-vdom",
  "version": "5.0.0",
  "description": "Compile Markdown to VDOM with remark",
  "license": "MIT",
  "keywords": [
    "markdown",
    "html",
    "vdom",
    "virtual",
    "hyperscript",
    "dom",
    "stringify",
    "compile",
    "remark"
  ],
  "repository": "https://github.com/wooorm/remark-vdom",
  "bugs": "https://github.com/wooorm/remark-vdom/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {
    "hast-to-hyperscript": "^4.0.0",
    "hast-util-sanitize": "^1.0.0",
    "mdast-util-to-hast": "^3.0.0",
    "virtual-dom": "^2.1.1"
  },
  "devDependencies": {
    "browserify": "^14.0.0",
    "esmangle": "^1.0.0",
    "nyc": "^11.0.0",
    "remark": "^8.0.0",
    "remark-cli": "^4.0.0",
    "remark-preset-wooorm": "^3.0.0",
    "tape": "^4.0.0",
    "vdom-to-html": "^2.2.0",
    "xo": "^0.18.0"
  },
  "scripts": {
    "build-md": "remark . -qfo",
    "build-bundle": "browserify index.js --bare -s remarkVDOM > remark-vdom.js",
    "build-mangle": "esmangle remark-vdom.js > remark-vdom.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test.js",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "xo": {
    "space": true,
    "esnext": false,
    "ignores": [
      "remark-vdom.js"
    ]
  },
  "remarkConfig": {
    "plugins": ["preset-wooorm"]
  }
}
