{
  "name": "remark-vdom",
  "version": "3.0.0",
  "description": "Compile Markdown to VDOM with remark",
  "license": "MIT",
  "keywords": [
    "markdown",
    "html",
    "vdom",
    "virtual",
    "hyperscript",
    "dom",
    "stringify",
    "compile",
    "remark"
  ],
  "files": [
    "index.js"
  ],
  "repository": "https://github.com/wooorm/remark-vdom",
  "bugs": "https://github.com/wooorm/remark-vdom/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "dependencies": {
    "hast-to-hyperscript": "^2.0.2",
    "hast-util-sanitize": "^1.0.0",
    "mdast-util-to-hast": "^1.0.0",
    "virtual-dom": "^2.1.1"
  },
  "devDependencies": {
    "browserify": "^13.0.0",
    "esmangle": "^1.0.0",
    "istanbul": "^0.4.0",
    "remark": "^5.0.0",
    "remark-cli": "^1.0.0",
    "remark-comment-config": "^4.0.0",
    "remark-github": "^5.0.0",
    "remark-lint": "^4.0.0",
    "remark-usage": "^4.0.0",
    "remark-validate-links": "^4.0.0",
    "tape": "^4.0.0",
    "vdom-to-html": "^2.2.0",
    "xo": "^0.16.0"
  },
  "scripts": {
    "build-md": "remark . --quiet --frail",
    "build-bundle": "browserify index.js --bare -s remarkVDOM > remark-vdom.js",
    "build-mangle": "esmangle remark-vdom.js > remark-vdom.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test.js",
    "test-coverage": "istanbul cover test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "xo": {
    "space": true,
    "ignores": [
      "remark-vdom.js",
      "remark-vdom.min.js"
    ]
  },
  "remarkConfig": {
    "output": true,
    "plugins": [
      "comment-config",
      "lint",
      "github",
      "validate-links",
      "usage"
    ],
    "settings": {
      "bullet": "*"
    }
  }
}
